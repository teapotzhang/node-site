<h1>后台管理界面</h1>

<h2>卡片列表</h2>

<form ref="searchForm" id="searchForm" method="get" action="/admin/index/search">
    <input type='text' name='searchKey' placeholder='card_unique_id'/>
    <input type='submit' value='搜索'>
</form>

<form ref="updateForm" id="updateForm" method="get" action="/admin/index/update">
    <input type='text' name='card_unique_id' placeholder='card_unique_id 用来进行查询' required/>
    <input type='text' name='blueItem' placeholder='blueItem'/>
    <input type='text' name='redItem' placeholder='redItem'/>
    <input type='text' name='analysis' placeholder='analysis'/>
    <input type='text' name='expression' placeholder='expression'/>
    <input type='text' name='rightItem' placeholder='rightItem'/>
    <input type='text' name='whole_line' placeholder='whole_line'/>
    <input type='submit' value='更新'>
</form>

<table>
  <tr>
    <th>卡包名字</th>
    <th>卡包价格</th>
    <th>卡的类型</th>
    <th>正确项</th>
    <th>真题表述</th>
    <th>蓝色项</th>
    <th>红色项</th>
    <th>前面的表述</th>
    <th>后面的表述</th>
    <th>分析</th>
    <th>真题年份</th>
    <th>真题卷号</th>
    <th>真题题目号</th>
    <th>卡的唯一ID</th>
  </tr>
  {{#each cards}}
  <tr>
    <td>{{packageName}}</td>
    <td>{{packagePrice}}</td>
    <td>{{cardType}}</td>
    <td>{{rightItem}}</td>
    <td>{{expression}}</td>
    <td>{{blueItem}}</td>
    <td>{{redItem}}</td>
    <td>{{firstLine}}</td>
    <td>{{lastLine}}</td>
    <td>{{analysis}}</td>
    <td>{{yearNumber}}</td>
    <td>{{reelNumber}}</td>
    <td>{{questionNumber}}</td>    
    <td>{{card_unique_id}}</td>	    	    	    	    
  </tr>
  {{/each}}
</table>

<br />

<h1>修改卡片包的价格</h1>

<form ref="searchForm" id="searchForm" method="get" action="/admin/index/search/package">
    <input type='text' name='searchKey' placeholder='packageName'/>
    <input type='submit' value='搜索'>
</form>

<form ref="updateForm" id="updateForm" method="get" action="/admin/index/update/package">
    <input type='text' name='packageName' placeholder='packageName 用来进行查询' required/>
    <input type='number' name='subPackageName' placeholder='subPackageName 子卡包的名字' required/>
    <input type='text' name='packagePrice' placeholder='packagePrice 单位是分'/>
    <input type='number' name='packageId' placeholder='packageId 用来进行列表排序'/>
    <input type='submit' value='更新'>
</form>

<table>
  <tr>
    <th>包名字</th>
    <th>里面的包的名字</th>
    <th>包价格</th>
    <th>包ID</th>
  </tr>
  {{#each packages}}
  <tr>
    <td>{{packageName}}</td>
    <td>{{subPackageName}}</td>
    <td>{{packagePrice}}</td>
    <td>{{packageId}}</td>                         
  </tr>
  {{/each}}
</table>


<form ref="uploadForm" id="uploadForm" method="post" encType="multipart/form-data">
        <input type="file" name="cardFile" />
        <input type='submit' value='上传' />	
</form>